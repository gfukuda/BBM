<h1>Listing games</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Championship</th>
    <th>Home Team</th>
    <th></th>
    <th>Away Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.date.strftime('%Y/%m/%d %H:%M') %></td>
    <td><%= game.championship.name %></td>
    <td><%= game.home_team.name %></td>
    <td>VS.</td>
    <td><%= game.away_team.name %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

